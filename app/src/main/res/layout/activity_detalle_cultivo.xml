<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FDFBF7">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:clipToPadding="false"
            android:paddingBottom="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/top_bar"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingHorizontal="24dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/btn_back"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_media_previous"
                        app:tint="#39FF14"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detalle de Cultivo"
                        android:textColor="#0C1324"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <ImageView
                        android:id="@+id/btn_options"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_more"
                        app:tint="#39FF14"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/header_image_section"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:layout_constraintTop_toBottomOf="@id/top_bar">

                    <ImageView
                        android:id="@+id/iv_cultivo_foto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:background="#D7CCC8" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#40000000" />

                    <TextView
                        android:id="@+id/tag_estado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FLORACIÓN"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_pill_verde"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/tv_titulo_cultivo" />

                    <TextView
                        android:id="@+id/tag_lote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lote A-12"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:background="@drawable/bg_pill_transparente"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@id/tag_estado"
                        app:layout_constraintTop_toTopOf="@id/tag_estado"
                        app:layout_constraintBottom_toBottomOf="@id/tag_estado" />

                    <TextView
                        android:id="@+id/tv_titulo_cultivo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mi Papa Canchán"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginStart="24dp"
                        android:layout_marginBottom="4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/tv_fecha_siembra" />

                    <TextView
                        android:id="@+id/tv_fecha_siembra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sembrado el 15 de Septiembre, 2023"
                        android:textColor="#E0E0E0"
                        android:textSize="12sp"
                        android:layout_marginStart="24dp"
                        android:layout_marginBottom="24dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/progress_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="24dp"
                    android:paddingTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/header_image_section">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Progreso del Ciclo"
                        android:textColor="#546E7A"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="65%"
                        android:textColor="#39FF14"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:indicatorColor="#39FF14"
                        app:trackColor="#F5F6F8"
                        app:trackCornerRadius="4dp"
                        app:trackThickness="8dp"
                        android:progress="65"
                        app:layout_constraintTop_toBottomOf="@+id/textView"
                        tools:ignore="UnknownId" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/status_cards_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="24dp"
                    android:paddingTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/progress_section">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:strokeColor="#E0E0E0"
                        app:strokeWidth="1dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                app:cardBackgroundColor="#E8F5E9"
                                app:cardCornerRadius="12dp"
                                app:strokeWidth="0dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@android:drawable/ic_menu_today"
                                    app:tint="#4CAF50"
                                    android:layout_gravity="center" />
                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Días para Cosecha"
                                    android:textColor="#78909C"
                                    android:textSize="11sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="45 Días"
                                    android:textColor="#0C1324"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="2dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:strokeColor="#E0E0E0"
                        app:strokeWidth="1dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                app:cardBackgroundColor="#E3F2FD"
                                app:cardCornerRadius="12dp"
                                app:strokeWidth="0dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_water_drop"
                                    app:tint="#2196F3"
                                    android:layout_gravity="center" />
                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Último Riego"
                                    android:textColor="#78909C"
                                    android:textSize="11sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ayer, 8:00 AM"
                                    android:textColor="#0C1324"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="2dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:strokeColor="#E0E0E0"
                        app:strokeWidth="1dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                app:cardBackgroundColor="#FFF3E0"
                                app:cardCornerRadius="12dp"
                                app:strokeWidth="0dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@android:drawable/ic_dialog_alert"
                                    app:tint="#FF9800"
                                    android:layout_gravity="center" />
                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Días para Cosecha"
                                    android:textColor="#78909C"
                                    android:textSize="11sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="45 Días"
                                    android:textColor="#0C1324"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="2dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/activities_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="24dp"
                    android:paddingTop="32dp"
                    app:layout_constraintTop_toBottomOf="@id/status_cards_section">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Registro de Actividades"
                        android:textColor="#0C1324"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver todo →"
                        android:textColor="#39FF14"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"
                        tools:ignore="UnknownId">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="0dp"
                            app:cardBackgroundColor="#FFFFFF">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <View
                                    android:layout_width="4dp"
                                    android:layout_height="0dp"
                                    android:background="#0C1324"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent" />

                                <ImageView
                                    android:id="@+id/ic_act1"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@android:drawable/ic_menu_directions"
                                    app:tint="#FF9800"
                                    android:background="@drawable/bg_white_rounded_border"
                                    android:padding="8dp"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginTop="16dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/tit_act1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="Fertilización Programada"
                                    android:textColor="#0C1324"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_marginStart="12dp"
                                    app:layout_constraintStart_toEndOf="@id/ic_act1"
                                    app:layout_constraintTop_toTopOf="@id/ic_act1" />

                                <TextView
                                    android:id="@+id/sub_act1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mañana, 07:00 AM"
                                    android:textColor="#78909C"
                                    android:textSize="11sp"
                                    android:layout_marginTop="2dp"
                                    app:layout_constraintStart_toStartOf="@id/tit_act1"
                                    app:layout_constraintTop_toBottomOf="@id/tit_act1" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="16dp"
                                    app:layout_constraintStart_toStartOf="@id/tit_act1"
                                    app:layout_constraintTop_toBottomOf="@id/sub_act1"
                                    app:layout_constraintBottom_toBottomOf="parent">

                                    <com.google.android.material.button.MaterialButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="36dp"
                                        android:text="Completar"
                                        android:textColor="#FFFFFF"
                                        android:textSize="10sp"
                                        android:textStyle="bold"
                                        app:backgroundTint="#00E676"
                                        app:cornerRadius="8dp"
                                        android:layout_marginEnd="8dp" />

                                    <com.google.android.material.button.MaterialButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="36dp"
                                        android:text="Posponer"
                                        android:textColor="#546E7A"
                                        android:textSize="10sp"
                                        android:textStyle="bold"
                                        app:backgroundTint="#F5F6F8"
                                        app:cornerRadius="8dp"
                                        app:elevation="0dp" />
                                </LinearLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="0dp"
                            app:cardBackgroundColor="#FFFFFF">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <View
                                    android:layout_width="4dp"
                                    android:layout_height="0dp"
                                    android:background="#0C1324"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent" />

                                <ImageView
                                    android:id="@+id/ic_act2"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_check"
                                    app:tint="#4CAF50"
                                    android:background="@drawable/bg_white_rounded_border"
                                    android:padding="8dp"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginVertical="16dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent" />

                                <TextView
                                    android:id="@+id/tit_act2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Riego por Goteo"
                                    android:textColor="#0C1324"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_marginStart="12dp"
                                    app:layout_constraintStart_toEndOf="@id/ic_act2"
                                    app:layout_constraintTop_toTopOf="@id/ic_act2" />

                                <TextView
                                    android:id="@+id/sub_act2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ayer, 08:00 AM\nSe aplicó 20L por m2"
                                    android:textColor="#78909C"
                                    android:textSize="11sp"
                                    android:layout_marginTop="2dp"
                                    app:layout_constraintStart_toStartOf="@id/tit_act2"
                                    app:layout_constraintTop_toBottomOf="@id/tit_act2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ÉXITO"
                                    android:textColor="#4CAF50"
                                    android:textSize="9sp"
                                    android:textStyle="bold"
                                    android:background="@drawable/bg_pill_verde"
                                    android:backgroundTint="#E8F5E9"
                                    android:paddingHorizontal="8dp"
                                    android:paddingVertical="4dp"
                                    android:layout_marginEnd="16dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="@id/tit_act2"
                                    app:layout_constraintBottom_toBottomOf="@id/tit_act2" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="0dp"
                            app:cardBackgroundColor="#FFFFFF">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <View
                                    android:layout_width="4dp"
                                    android:layout_height="0dp"
                                    android:background="#0C1324"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent" />

                                <ImageView
                                    android:id="@+id/ic_act3"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_leaf"
                                    app:tint="#4CAF50"
                                    android:background="@drawable/bg_white_rounded_border"
                                    android:padding="8dp"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginVertical="16dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent" />

                                <TextView
                                    android:id="@+id/tit_act3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Control de Plagas"
                                    android:textColor="#0C1324"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_marginStart="12dp"
                                    app:layout_constraintStart_toEndOf="@id/ic_act3"
                                    app:layout_constraintTop_toTopOf="@id/ic_act3" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hace 3 días, 10:30 AM"
                                    android:textColor="#78909C"
                                    android:textSize="11sp"
                                    android:layout_marginTop="2dp"
                                    app:layout_constraintStart_toStartOf="@id/tit_act3"
                                    app:layout_constraintTop_toBottomOf="@id/tit_act3" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ÉXITO"
                                    android:textColor="#4CAF50"
                                    android:textSize="9sp"
                                    android:textStyle="bold"
                                    android:background="@drawable/bg_pill_verde"
                                    android:backgroundTint="#E8F5E9"
                                    android:paddingHorizontal="8dp"
                                    android:paddingVertical="4dp"
                                    android:layout_marginEnd="16dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="@id/tit_act3"
                                    app:layout_constraintBottom_toBottomOf="@id/tit_act3" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <include
            android:id="@+id/nav_inferior"
            layout="@layout/layout_nav_inferior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>