<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFBF7"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro de Cultivo"
            android:textColor="#0C1324"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Selecciona tu cultivo principal y activa tu ubicaciÃ³n para recibir datos climÃ¡ticos precisos."
            android:textColor="#546E7A"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tv_titulo" />

        <EditText
            android:id="@+id/et_buscar_cultivo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_search_bar"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="12dp"
            android:hint="Buscar producto (ej. Papa)..."
            android:paddingHorizontal="16dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tv_descripcion" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_opcion_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#E8F5E9"
            app:strokeColor="#A5D6A7"
            app:strokeWidth="1dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/et_buscar_cultivo">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_papa_amarilla"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:scaleType="centerCrop"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:background="#E0E0E0"
                    app:shapeAppearanceOverlay="@style/RoundedSquare"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/tv_title_pa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Papa Amarilla"
                    android:textStyle="bold"
                    android:textColor="#0C1324"
                    android:layout_marginStart="12dp"
                    app:layout_constraintStart_toEndOf="@id/iv_papa_amarilla"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_sub_pa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Variedad: Tumbay"
                    android:textSize="10sp"
                    android:textColor="#78909C"
                    app:layout_constraintStart_toStartOf="@id/tv_title_pa"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_pa"/>

                <TextView
                    android:id="@+id/tv_precio_pa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/ 4.50"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#0C1324"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="@id/tv_title_pa"
                    app:layout_constraintTop_toBottomOf="@id/tv_sub_pa"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / kg"
                    android:textSize="10sp"
                    android:textColor="#78909C"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_precio_pa"
                    app:layout_constraintStart_toEndOf="@id/tv_precio_pa"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â†‘ 12%"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="#00C853"
                    android:background="@drawable/bg_tendencia_positiva"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_opcion_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#FFFFFF"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/card_opcion_1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_papa_yungay"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:scaleType="centerCrop"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:background="#E0E0E0"
                    app:shapeAppearanceOverlay="@style/RoundedSquare"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/tv_title_py"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Papa Yungay"
                    android:textStyle="bold"
                    android:textColor="#0C1324"
                    android:layout_marginStart="12dp"
                    app:layout_constraintStart_toEndOf="@id/iv_papa_yungay"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_sub_py"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bolsa x 25kg (Promedio)"
                    android:textSize="10sp"
                    android:textColor="#78909C"
                    app:layout_constraintStart_toStartOf="@id/tv_title_py"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_py"/>

                <TextView
                    android:id="@+id/tv_precio_py"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/ 3.20"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#0C1324"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="@id/tv_title_py"
                    app:layout_constraintTop_toBottomOf="@id/tv_sub_py"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / kg"
                    android:textSize="10sp"
                    android:textColor="#78909C"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_precio_py"
                    app:layout_constraintStart_toEndOf="@id/tv_precio_py"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â†“ 05%"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="#D32F2F"
                    android:background="@drawable/bg_tendencia_negativa"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_calcular_presupuesto"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:text="Calcular Presupuesto"
            android:textColor="#0C1324"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/card_opcion_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/label_identificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="IdentificaciÃ³n"
            android:textColor="#0C1324"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/btn_calcular_presupuesto"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/label_nombre_cultivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nombre del Cultivo"
            android:textSize="12sp"
            android:textColor="#546E7A"
            app:layout_constraintTop_toBottomOf="@id/label_identificacion"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/et_nombre_cultivo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_white_rounded_border"
            android:hint="Ej. Papa Yungay"
            android:paddingHorizontal="16dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/label_nombre_cultivo"/>

        <TextView
            android:id="@+id/label_cronograma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Cronograma y Riego"
            android:textColor="#0C1324"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/et_nombre_cultivo"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/label_fecha_siembra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Fecha de Siembra"
            android:textSize="12sp"
            android:textColor="#546E7A"
            app:layout_constraintTop_toBottomOf="@id/label_cronograma"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_fecha_siembra"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_white_rounded_border"
            android:gravity="center_vertical"
            android:text="   ðŸ“…  10/27/2023"
            android:paddingHorizontal="16dp"
            android:textColor="#0C1324"
            app:layout_constraintTop_toBottomOf="@+id/label_fecha_siembra"/>

        <TextView
            android:id="@+id/label_fecha_cosecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Cosecha Estimada"
            android:textSize="12sp"
            android:textColor="#546E7A"
            app:layout_constraintTop_toBottomOf="@id/tv_fecha_siembra"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_fecha_cosecha"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_white_rounded_border"
            android:gravity="center_vertical"
            android:text="   ðŸ“…  03/05/2024"
            android:paddingHorizontal="16dp"
            android:textColor="#0C1324"
            app:layout_constraintTop_toBottomOf="@+id/label_fecha_cosecha"/>

        <TextView
            android:id="@+id/label_riego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Tiempo de Riego Promedio (min/dÃ­a)"
            android:textSize="12sp"
            android:textColor="#546E7A"
            app:layout_constraintTop_toBottomOf="@id/tv_fecha_cosecha"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/et_riego"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_white_rounded_border"
            android:hint="   ðŸ’§  Ej. 45"
            android:inputType="number"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@+id/label_riego" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ubicacion"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:text="UbicaciÃ³n AutomÃ¡tica"
            android:textColor="#0C1324"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp"
            app:cornerRadius="25dp"
            app:icon="@android:drawable/ic_menu_mylocation"
            app:iconTint="#39FF14"
            app:layout_constraintTop_toBottomOf="@id/et_riego"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_guardar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            android:text="Guardar Cultivo"
            android:textColor="#0C1324"
            android:textStyle="bold"
            app:backgroundTint="#39FF14"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_menu_save"
            app:iconTint="#0C1324"
            app:iconGravity="textEnd"
            app:layout_constraintTop_toBottomOf="@id/btn_ubicacion"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>