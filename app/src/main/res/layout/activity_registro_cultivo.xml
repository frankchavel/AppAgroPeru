<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFBF7"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro de Cultivo"
            android:textColor="#0C1324"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="4dp"
            android:text="Selecciona tu cultivo principal y activa tu ubicación para recibir datos climáticos precisos."
            android:textColor="#546E7A"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tv_titulo" />

        <EditText
            android:id="@+id/et_buscar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_white_rounded_border"
            android:backgroundTint="#EFEFEF"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="8dp"
            android:hint="Buscar producto (ej. Papa)..."
            android:paddingHorizontal="16dp"
            android:textColorHint="#9E9E9E"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tv_descripcion" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_papa_amarilla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#E6F9EC"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeColor="#A3E4B7"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/et_buscar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/img_papa_amarilla"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_white_rounded_border"
                    android:backgroundTint="#0C1324"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/tv_nombre_amarilla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Papa Amarilla"
                    android:textColor="#0C1324"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/img_papa_amarilla"
                    app:layout_constraintTop_toTopOf="@id/img_papa_amarilla" />

                <TextView
                    android:id="@+id/tv_var_amarilla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Variedad: Tumbay"
                    android:textColor="#546E7A"
                    android:textSize="11sp"
                    app:layout_constraintStart_toEndOf="@id/img_papa_amarilla"
                    app:layout_constraintTop_toBottomOf="@id/tv_nombre_amarilla" />

                <TextView
                    android:id="@+id/tv_precio_amarilla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:text="S/ 4.50"
                    android:textColor="#0C1324"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/img_papa_amarilla"
                    app:layout_constraintTop_toBottomOf="@id/tv_var_amarilla" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / kg"
                    android:textColor="#78909C"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_precio_amarilla"
                    app:layout_constraintStart_toEndOf="@id/tv_precio_amarilla" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_rounded_border"
                    android:backgroundTint="#CFF4D2"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:text="↑ 12%"
                    android:textColor="#2E7D32"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_papa_yungay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/card_papa_amarilla">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/img_papa_yungay"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_white_rounded_border"
                    android:backgroundTint="#0C1324"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/tv_nombre_yungay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Papa Yungay"
                    android:textColor="#0C1324"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/img_papa_yungay"
                    app:layout_constraintTop_toTopOf="@id/img_papa_yungay" />

                <TextView
                    android:id="@+id/tv_var_yungay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Bolsa x 25kg (Promedio)"
                    android:textColor="#546E7A"
                    android:textSize="11sp"
                    app:layout_constraintStart_toEndOf="@id/img_papa_yungay"
                    app:layout_constraintTop_toBottomOf="@id/tv_nombre_yungay" />

                <TextView
                    android:id="@+id/tv_precio_yungay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:text="S/ 3.20"
                    android:textColor="#0C1324"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/img_papa_yungay"
                    app:layout_constraintTop_toBottomOf="@id/tv_var_yungay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / kg"
                    android:textColor="#78909C"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_precio_yungay"
                    app:layout_constraintStart_toEndOf="@id/tv_precio_yungay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_rounded_border"
                    android:backgroundTint="#FCE4E4"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:text="↓ 05%"
                    android:textColor="#C62828"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_calcular"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:text="Calcular Presupuesto"
            android:textColor="#0C1324"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/card_papa_yungay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/label_identificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Identificación"
            android:textColor="#0C1324"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/btn_calcular"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/label_nombre_cultivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Nombre del Cultivo"
            android:textSize="13sp"
            android:textColor="#546E7A"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/label_identificacion"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/et_nombre_cultivo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_white_rounded_border"
            android:hint="Ej. Papa Yungay"
            android:drawableStart="@android:drawable/ic_menu_edit"
            android:drawablePadding="12dp"
            android:paddingHorizontal="16dp"
            android:textColorHint="#9E9E9E"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/label_nombre_cultivo"/>

        <TextView
            android:id="@+id/label_cronograma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Cronograma y Riego"
            android:textColor="#0C1324"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/et_nombre_cultivo"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/label_fecha_siembra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Fecha de Siembra"
            android:textSize="13sp"
            android:textColor="#546E7A"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/label_cronograma"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_fecha_siembra"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_white_rounded_border"
            android:drawableStart="@android:drawable/ic_menu_my_calendar"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:text="10/27/2023"
            android:paddingHorizontal="16dp"
            android:textColor="#0C1324"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/label_fecha_siembra"/>

        <TextView
            android:id="@+id/label_fecha_cosecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Cosecha Estimada"
            android:textSize="13sp"
            android:textColor="#546E7A"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_fecha_siembra"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_fecha_cosecha"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_white_rounded_border"
            android:drawableStart="@android:drawable/ic_menu_my_calendar"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:text="03/05/2024"
            android:paddingHorizontal="16dp"
            android:textColor="#0C1324"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/label_fecha_cosecha"/>

        <TextView
            android:id="@+id/label_riego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Tiempo de Riego Promedio (min/día)"
            android:textSize="13sp"
            android:textColor="#546E7A"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_fecha_cosecha"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/et_riego"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_white_rounded_border"
            android:hint="Ej. 45"
            android:inputType="number"
            android:drawableStart="@android:drawable/ic_menu_info_details"
            android:drawablePadding="12dp"
            android:paddingHorizontal="16dp"
            android:textColorHint="#9E9E9E"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/label_riego" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ubicacion"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:text="Ubicación Automática"
            android:textColor="#0C1324"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_mylocation"
            app:iconTint="#39FF14"
            app:layout_constraintTop_toBottomOf="@id/et_riego"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_guardar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:text="Guardar Cultivo "
            android:textColor="#0C1324"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#00FF00"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_save"
            app:iconTint="#0C1324"
            app:iconGravity="textEnd"
            app:layout_constraintTop_toBottomOf="@id/btn_ubicacion"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>