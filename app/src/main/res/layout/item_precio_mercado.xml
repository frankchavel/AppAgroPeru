<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_producto"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:background="#F5F5F5"
            android:src="@android:drawable/ic_menu_gallery"
            app:shapeAppearanceOverlay="@style/RoundedSquare"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_nombre_producto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Papa Amarilla"
            android:textColor="#0C1324"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/iv_producto"
            app:layout_constraintTop_toTopOf="@id/iv_producto" />

        <TextView
            android:id="@+id/tv_variedad_producto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Variedad: Tumbay"
            android:textColor="#78909C"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tv_nombre_producto"
            app:layout_constraintTop_toBottomOf="@id/tv_nombre_producto" />

        <TextView
            android:id="@+id/tv_precio_producto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="S/ 4.50"
            android:textColor="#0C1324"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_nombre_producto"
            app:layout_constraintTop_toBottomOf="@id/tv_variedad_producto" />

        <TextView
            android:id="@+id/tv_unidad_producto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / kg"
            android:textColor="#78909C"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_precio_producto"
            app:layout_constraintStart_toEndOf="@id/tv_precio_producto" />

        <TextView
            android:id="@+id/tv_tendencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tendencia_positiva"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="â†‘ 12%"
            android:textColor="#00C853"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_nombre_producto" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>