<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFBF7">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp">

            <TextView
                android:id="@+id/tv_titulo_calendario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Calendario"
                android:textColor="#0C1324"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_mes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="NOVIEMBRE 2023"
                android:textColor="#78909C"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_titulo_calendario" />

            <ImageView
                android:id="@+id/ic_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/bg_circle_gray"
                android:padding="8dp"
                android:src="@android:drawable/ic_menu_search"
                app:tint="#78909C"
                app:layout_constraintBottom_toBottomOf="@id/tv_mes"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_titulo_calendario" />

            <HorizontalScrollView
                android:id="@+id/scroll_fechas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:clipToPadding="false"
                android:paddingHorizontal="24dp"
                android:scrollbars="none"
                app:layout_constraintTop_toBottomOf="@id/tv_mes">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout android:layout_width="50dp" android:layout_height="70dp" android:gravity="center" android:orientation="vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="LUN" android:textColor="#78909C" android:textSize="12sp" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="13" android:textColor="#0C1324" android:textSize="18sp" android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout android:layout_width="50dp" android:layout_height="70dp" android:gravity="center" android:orientation="vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="MAR" android:textColor="#78909C" android:textSize="12sp" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="14" android:textColor="#0C1324" android:textSize="18sp" android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout android:layout_width="60dp" android:layout_height="80dp" android:layout_marginHorizontal="8dp" android:background="@drawable/bg_fecha_seleccionada" android:elevation="4dp" android:gravity="center" android:orientation="vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="HOY" android:textColor="#0C1324" android:textSize="12sp" android:textStyle="bold" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="15" android:textColor="#0C1324" android:textSize="22sp" android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout android:layout_width="50dp" android:layout_height="70dp" android:gravity="center" android:orientation="vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="JUE" android:textColor="#78909C" android:textSize="12sp" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="16" android:textColor="#0C1324" android:textSize="18sp" android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout android:layout_width="50dp" android:layout_height="70dp" android:gravity="center" android:orientation="vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="VIE" android:textColor="#78909C" android:textSize="12sp" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="17" android:textColor="#0C1324" android:textSize="18sp" android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <View
                android:id="@+id/separador"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#E0E0E0"
                app:layout_constraintTop_toBottomOf="@id/scroll_fechas" />

            <TextView
                android:id="@+id/tv_tareas_hoy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="Tareas de Hoy"
                android:textColor="#0C1324"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/separador" />

            <TextView
                android:id="@+id/tv_tareas_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:background="@drawable/bg_white_rounded_border"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="3 TAREAS"
                android:textColor="#546E7A"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tv_tareas_hoy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_tareas_hoy" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_tarea_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tareas_hoy"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView android:id="@+id/ic_tarea_1" android:layout_width="32dp" android:layout_height="32dp" android:background="@drawable/bg_fecha_seleccionada" android:padding="6dp" android:src="@drawable/ic_water_drop" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" app:tint="#FFFFFF" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/bg_tag_completado" android:paddingHorizontal="8dp" android:paddingVertical="4dp" android:text="COMPLETADO" android:textColor="#FFFFFF" android:textSize="9sp" android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" />
                    <TextView android:id="@+id/tv_tit_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="Riego por goteo" android:textColor="#0C1324" android:textSize="16sp" android:textStyle="bold" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/ic_tarea_1" />
                    <TextView android:id="@+id/tv_sub_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="Lote A-12 (Papa Amarilla)" android:textColor="#78909C" android:textSize="12sp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/tv_tit_1" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:drawableStart="@android:drawable/ic_menu_recent_history" android:drawablePadding="6dp" android:text="06:00 AM - 08:30 AM" android:textColor="#B0BEC5" android:textSize="11sp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/tv_sub_1" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_tarea_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_tarea_1"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView android:id="@+id/ic_tarea_2" android:layout_width="32dp" android:layout_height="32dp" android:background="@drawable/bg_circle_gray" android:padding="6dp" android:src="@drawable/ic_leaf" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" app:tint="#FF9800" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/bg_tag_pendiente" android:paddingHorizontal="8dp" android:paddingVertical="4dp" android:text="PENDIENTE" android:textColor="#78909C" android:textSize="9sp" android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" />
                    <TextView android:id="@+id/tv_tit_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="Aplicación de Abono" android:textColor="#0C1324" android:textSize="16sp" android:textStyle="bold" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/ic_tarea_2" />
                    <TextView android:id="@+id/tv_sub_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="Fertilizante NPK orgánico" android:textColor="#78909C" android:textSize="12sp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/tv_tit_2" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:drawableStart="@android:drawable/ic_menu_recent_history" android:drawablePadding="6dp" android:text="10:30 AM - 12:00 PM" android:textColor="#B0BEC5" android:textSize="11sp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/tv_sub_2" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_tarea_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_tarea_2"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView android:id="@+id/ic_tarea_3" android:layout_width="32dp" android:layout_height="32dp" android:background="@drawable/bg_circle_gray" android:padding="6dp" android:src="@android:drawable/ic_menu_manage" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" app:tint="#2196F3" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/bg_tag_pendiente" android:paddingHorizontal="8dp" android:paddingVertical="4dp" android:text="PENDIENTE" android:textColor="#78909C" android:textSize="9sp" android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" />
                    <TextView android:id="@+id/tv_tit_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="Poda de Mantenimiento" android:textColor="#0C1324" android:textSize="16sp" android:textStyle="bold" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/ic_tarea_3" />
                    <TextView android:id="@+id/tv_sub_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="Área de frutales perennes" android:textColor="#78909C" android:textSize="12sp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/tv_tit_3" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:drawableStart="@android:drawable/ic_menu_recent_history" android:drawablePadding="6dp" android:text="03:00 PM - 05:00 PM" android:textColor="#B0BEC5" android:textSize="11sp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/tv_sub_3" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:id="@+id/linea_tiempo"
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_marginStart="32dp"
                android:background="#E0E0E0"
                app:layout_constraintBottom_toBottomOf="@id/card_tarea_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/card_tarea_1" />

            <ImageView
                android:id="@+id/dot_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:src="@drawable/dot_activo"
                app:layout_constraintEnd_toEndOf="@id/linea_tiempo"
                app:layout_constraintStart_toStartOf="@id/linea_tiempo"
                app:layout_constraintTop_toTopOf="@id/card_tarea_1" />

            <ImageView
                android:id="@+id/dot_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:src="@drawable/dot_inactivo"
                app:layout_constraintEnd_toEndOf="@id/linea_tiempo"
                app:layout_constraintStart_toStartOf="@id/linea_tiempo"
                app:layout_constraintTop_toTopOf="@id/card_tarea_2" />

            <ImageView
                android:id="@+id/dot_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:src="@drawable/dot_inactivo"
                app:layout_constraintEnd_toEndOf="@id/linea_tiempo"
                app:layout_constraintStart_toStartOf="@id/linea_tiempo"
                app:layout_constraintTop_toTopOf="@id/card_tarea_3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_anadir_tarea"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="100dp"
        android:text="Añadir Tarea"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:backgroundTint="#0C1324"
        app:cornerRadius="25dp"
        app:elevation="8dp"
        app:icon="@drawable/ic_add"
        app:iconGravity="textEnd"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>