<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculadoraActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/panel_inferior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_media_previous"
                app:tint="#0C1324"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tv_titulo"/>

            <TextView
                android:id="@+id/tv_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculadora de Costos"
                android:textColor="#0C1324"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/separador_top"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F5F5F5"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/tv_titulo"/>

            <TextView
                android:id="@+id/lbl_extension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="EXTENSIÃ“N DEL CULTIVO"
                android:textColor="#78909C"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/separador_top" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_input_extension"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_contador_gris"
                android:paddingHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@id/lbl_extension">

                <ImageView
                    android:id="@+id/ic_regla"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    app:tint="#78909C"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <EditText
                    android:id="@+id/et_extension"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:text="1.5"
                    android:textColor="#0C1324"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/ic_regla"
                    app:layout_constraintEnd_toStartOf="@id/tv_ha"/>

                <TextView
                    android:id="@+id/tv_ha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ha"
                    android:textColor="#78909C"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/lbl_insumos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="INSUMOS Y RECURSOS"
                android:textColor="#78909C"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_input_extension" />

            <TextView
                android:id="@+id/btn_agregar_insumo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Agregar"
                android:textColor="#00E676"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/lbl_insumos"
                app:layout_constraintTop_toTopOf="@id/lbl_insumos"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_insumos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/lbl_insumos"
                tools:listitem="@layout/item_insumo"
                tools:itemCount="3"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/panel_inferior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_rounded_border"
        android:elevation="16dp"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/lbl_costo_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COSTO TOTAL ESTIMADO"
            android:textColor="#78909C"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_gran_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/ 1,405.00"
            android:textColor="#0C1324"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lbl_costo_total"/>

        <TextView
            android:id="@+id/tag_rentable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tag_rentable"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="RENTABLE"
            android:textColor="#00E676"
            android:textSize="9sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/lbl_costo_total"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/ 936.67 por ha"
            android:textColor="#B0BEC5"
            android:textSize="10sp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tag_rentable"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@id/tv_gran_total">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_exportar"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Exportar"
                android:textColor="#0C1324"
                android:textStyle="bold"
                app:backgroundTint="#F5F6F8"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_menu_share"
                app:iconTint="#0C1324"
                app:elevation="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_guardar"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Guardar"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:backgroundTint="#00E676"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_menu_save"
                app:iconTint="#FFFFFF"
                app:elevation="0dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>